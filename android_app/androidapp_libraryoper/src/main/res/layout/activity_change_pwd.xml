<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:baselineAligned="false">


    <LinearLayout
        android:background="@color/white_normal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/change_pwd_return"
                android:layout_marginLeft="3dp"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/back"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/change_pwd_title"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#FF555555"
            android:id="@+id/textView3" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <include
        layout="@layout/line_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/change_pwd_old_pwd"
        android:textColor="@color/forget_pwd_text_view"
        android:textSize="15sp"
        android:id="@+id/textView4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_pwd_old_password"
        android:padding="15dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:background="@color/input_font"
        android:hint="@string/change_pwd_old_pwd_tip"
        android:textColorHint="@color/hint_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="15sp"
        android:textColor="@color/forget_pwd_text_view"
        android:text="@string/change_pwd_new_pwd"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_pwd_new_password"
        android:padding="15dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:background="@color/input_font"
        android:textColorHint="@color/hint_color"
        android:hint="@string/change_pwd_new_pwd_tip"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="15sp"
        android:textColor="@color/forget_pwd_text_view"
        android:text="@string/change_pwd_confirm_pwd"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_pwd_confirm_password"
        android:padding="15dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:background="@color/input_font"
        android:textColorHint="@color/hint_color"
        android:hint="@string/change_pwd_confirm_pwd_tip"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_pwd_submit"
            android:padding="15sp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/submit"
            android:textSize="19dp"
            android:textColor="@color/button_font"
            android:background="@drawable/button_border"/>
    </LinearLayout>
</LinearLayout>
