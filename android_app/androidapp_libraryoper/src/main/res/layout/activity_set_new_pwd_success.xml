<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:baselineAligned="false">

    <LinearLayout
        android:background="@color/white_normal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/set_new_pwd_success_return"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:src="@drawable/back"/>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/set_new_pwd_title"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#FF555555"
            android:id="@+id/textView3" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"/>


    </LinearLayout>
    <include
        layout="@layout/line_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="177dp"
        android:gravity="center|bottom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/success"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/set_new_pwd_success_tip"
        android:textSize="18sp"
        android:textColor="#FF555555"
        android:gravity="center"/>


    <Button
        android:id="@+id/set_new_pwd_success_submit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="@string/set_new_pwd_button_text"
        android:textSize="16sp"
        android:textColor="@color/button_font"
        android:background="@drawable/button_border"/>

</LinearLayout>
