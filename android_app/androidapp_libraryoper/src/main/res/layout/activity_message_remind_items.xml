<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/items_message_time"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="2017-4-19 10:12"
            android:textColor="#FFAAAAAA"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/items_message_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_normal"
            android:gravity="left|bottom"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:text="无打印纸"
            android:textColor="@color/content_color"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/items_message_trouble_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white_normal"
                android:gravity="left|center"
                android:paddingLeft="15dp"
                android:text="故障时间："
                android:textColor="@color/content_color"
                android:textSize="15sp" />
            <TextView
                android:layout_toRightOf="@+id/items_message_trouble_title"
                android:id="@+id/items_message_trouble_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_normal"
                android:gravity="left|center"
                android:text="2017-4-19 10:12"
                android:textColor="@color/content_color"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/items_message_content"
            android:background="@color/white_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:paddingLeft="15dp"
            android:text="24小时自助借还书机，打印机用完，请尽快补纸，24小时自助借还书机。"
            android:textColor="@color/content_color"
            android:textSize="15sp" />


    </LinearLayout>



</LinearLayout>
