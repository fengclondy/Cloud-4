<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white_normal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/device_monitor_return"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:src="@drawable/back" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/device_monitor_title"
            android:textColor="@color/title"
            android:textSize="19sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <include layout="@layout/line_view" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/device_monitor_select_lib"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/select_border"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/down"
                android:drawableRight="@drawable/down"
                android:gravity="center|left"
                android:hint="@string/device_monitor_lib"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/device_monitor_select_region"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/select_border"
                android:cursorVisible="false"
                android:drawableEnd="@drawable/down"
                android:drawableRight="@drawable/down"
                android:gravity="center|left"
                android:hint="@string/device_monitor_region"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/title"
                android:textSize="15sp" />


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/device_monitor_key_word"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/select_border"
                        android:gravity="center|left"
                        android:hint="@string/device_monitor_condition"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColorHint="@color/hint_color"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_margin="10dp"
                    android:gravity="center|right">

                    <ImageView
                        android:id="@+id/device_monitor_search_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/search" />
                </LinearLayout>

            </FrameLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.handmark.pulltorefresh.library.PullToRefreshListView
                        android:id="@+id/device_monitor_normal_pull_to_refresh_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#EEEEEE"
                        android:dividerHeight="2px"
                        android:listSelector="@android:color/transparent" />

                    <!--<ListView
                        android:id="@+id/device_monitor_list_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/device_monitor_not_found_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/not_found"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/device_monitor_not_found_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:gravity="center"
                        android:text="搜索无结果"
                        android:textColor="#FFAAAAAA"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <include
            android:id="@+id/networkWait"
            layout="@layout/wait_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>
