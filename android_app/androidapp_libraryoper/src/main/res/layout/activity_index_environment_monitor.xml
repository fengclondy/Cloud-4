<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/index_environment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/environment_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/environment_monitor" />

        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/environment_img"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/environment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/index_environment_monitor"
                android:textColor="#FF666666"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
