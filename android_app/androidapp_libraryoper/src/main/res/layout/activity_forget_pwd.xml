<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white_normal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/forget_pwd_return"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/back" />

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/forget_pwd"
                android:textColor="#FF555555"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <include layout="@layout/line_view" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/forget_mobile"
            android:textColor="@color/forget_pwd_text_view"
            android:textSize="15sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/input_font"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/forget_mobile_tip"
                android:padding="15dp"
                android:textColorHint="@color/hint_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sendVcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/send_vcode_bg"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="验证码"
            android:textColor="@color/forget_pwd_text_view"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/vcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/input_font"
            android:hint="请输入您手机收到的验证码"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/set_new_pwd_new_pwd"
            android:textColor="@color/forget_pwd_text_view"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/input_font"
            android:hint="@string/set_new_pwd_new_pwd_tip"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:textColor="@color/forget_pwd_text_view"
            android:text="@string/set_new_pwd_confirm_pwd"/>

        <EditText
            android:id="@+id/repeat_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/input_font"
            android:hint="@string/set_new_pwd_confirm_pwd_tip"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <Button
                android:id="@+id/forget_pwd_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/submit"
                android:textColor="@color/button_font"
                android:textSize="19sp" />


        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/waitview"
        layout="@layout/wait_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</FrameLayout>