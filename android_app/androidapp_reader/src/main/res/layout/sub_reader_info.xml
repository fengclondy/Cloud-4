<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="24dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"
                android:src="@drawable/normal_head"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/reader_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/icon"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/icon"
                android:layout_toRightOf="@+id/icon"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="@dimen/large_text"
                tools:text="王悦" />

            <TextView
                android:id="@+id/readerLibraryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/reader_name"
                android:layout_below="@+id/reader_name"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="上海图书馆" />

            <TextView
                android:id="@+id/reader_card_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/readerLibraryName"
                android:layout_below="@+id/readerLibraryName"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#888888"
                android:textSize="14sp"
                tools:text="123456789123456789" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/borrowInfoVg"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/count_borrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="36sp"
                        tools:text="6" />

                    <TextView
                        android:id="@+id/can_borrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:text="/0"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        tools:text="/10" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/borrowInfoVg"
                    android:layout_centerHorizontal="true"
                    android:text="@string/reader_info_can_borrow_tip"
                    android:textColor="#888888"
                    android:textSize="@dimen/medium_text" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/advance_chargeVG"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/advanceCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="36sp"
                        tools:text="100" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/local_money"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/advance_chargeVG"
                    android:layout_centerHorizontal="true"
                    android:text="@string/reader_info_advance_charge_tip"
                    android:textColor="#888888"
                    android:textSize="@dimen/medium_text" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_line"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/reader_info_my_deposit_tip"
                android:textSize="@dimen/medium_text"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="#333333"
                android:textSize="@dimen/medium_text"
                tools:ignore="RelativeOverlap"
                tools:text="100元" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_line"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/reader_info_my_arrears_tip"
                android:textSize="@dimen/medium_text"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/arrears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:textColor="#333333"
                android:textSize="@dimen/medium_text"
                tools:ignore="RelativeOverlap"
                tools:text="100元" />

        </RelativeLayout>

        <!--边线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F1F1F1"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:id="@+id/myCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_line"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/reader_info_my_card_tip"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/myCardTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/reader_card_go"
                android:text="@string/reader_info_my_card_tip2"
                android:textColor="#333333"
                android:textSize="@dimen/small_text"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/reader_card_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/go_white"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/readerMyBorrow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_line"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/reader_info_my_borrow_tip"
                android:textSize="@dimen/medium_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/go_white"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/readerFavorit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_line"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="我的收藏"
                android:textSize="@dimen/medium_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/go_white"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/readerPersonalSetting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_line"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/reader_info_personal_setting_tip"
                android:textSize="@dimen/medium_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/go_white"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
