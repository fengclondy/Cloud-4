<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/border_line_corlor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_hight"
            android:background="@color/orange"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="@dimen/title_bar_left_button_width"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/back_white" />
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/register_title"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text" />

            <Button
                android:id="@+id/register"
                android:layout_width="@dimen/title_bar_right_button_width"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:text="@string/register_button"
                android:textColor="@color/white"
                android:textSize="@dimen/standard_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username_tip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_username"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/register_username_tip"
                android:maxLines="1"
                android:padding="3dp"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/standard_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pwd_tip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_pwd"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="@string/register_pwd_tip"
                android:textColorHint="#BBBBBB"
                android:maxLines="1"
                android:padding="3dp"
                android:textSize="@dimen/standard_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/repwd_tip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_pwd_repeat"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/pwd_repeat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/register_pwd_repeat_tip"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="3dp"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/standard_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_tip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_name"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/register_name_tip"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/standard_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_idcard"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/id_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/register_idcard_tip"
                android:padding="3dp"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/standard_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_sex"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <RadioGroup
                android:id="@+id/sex_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/boy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:button="@drawable/normal_checkbox"
                    android:checked="true"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:text="@string/register_sex_boy"
                    android:textColor="#333333"
                    android:textSize="@dimen/standard_text"
                    tools:ignore="RtlHardcoded" />

                <RadioButton
                    android:id="@+id/girl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:button="@drawable/normal_checkbox"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:text="@string/register_sex_girl"
                    android:textColor="#333333"
                    android:textSize="@dimen/standard_text"
                    tools:ignore="RtlHardcoded" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mobile_tip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_mobile"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/register_mobile_tip"
                android:inputType="phone"
                android:padding="3dp"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/standard_text" />

            <TextView
                android:id="@+id/sendVcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/send_vcode_bg"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_mail"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/register_mail_tip"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="3dp"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/standard_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/border_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vcode_tip"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:padding="3dp"
                android:text="@string/register_vcode"
                android:textColor="#888888"
                android:textSize="@dimen/standard_text"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/vcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/register_vcode_tip"
                android:inputType="textEmailAddress"
                android:padding="3dp"
                android:textColorHint="#BBBBBB"
                android:textSize="@dimen/standard_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/renewWaitView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cover_grey"
        android:clickable="false"
        android:orientation="vertical"
        android:visibility="invisible">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:indeterminateDrawable="@drawable/processbar"
            android:visibility="visible" />
    </LinearLayout>
</FrameLayout>

